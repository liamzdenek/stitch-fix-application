{
  "name": "stitch-fix-application",
  "version": "0.0.1",
  "description": "Stitch Fix Client Engagement Acceleration System",
  "private": true,
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "serve:frontend": "nx serve frontend",
    "serve:backend": "nx serve backend",
    "deploy": "cd infrastructure && npx cdk deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.772.0",
    "@aws-sdk/client-sns": "^3.772.0",
    "@aws-sdk/client-sqs": "^3.772.0",
    "@aws-sdk/client-ses": "^3.772.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4",
    "openai": "^4.28.0"
  },
  "devDependencies": {
    "@nx/js": "20.6.2",
    "@nx/eslint": "20.6.2",
    "@nx/jest": "20.6.2",
    "@nx/react": "20.6.2",
    "@nx/vite": "20.6.2",
    "@nx/workspace": "20.6.2",
    "@types/aws-lambda": "^8.10.147",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "aws-cdk-lib": "^2.126.0",
    "constructs": "^10.3.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nx": "20.6.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.2",
    "vite": "^5.1.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "nx": {
    "targets": {
      "build": {
        "dependsOn": ["^build"]
      },
      "test": {
        "dependsOn": ["build"]
      },
      "lint": {
        "dependsOn": []
      }
    }
  }
}
